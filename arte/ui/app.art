  const vistaEscape = (text) => {
    return String(text || '').replace(/\\/g,'\\\\').replace(/"/g,'\\"');
  };

  const vistaAttrValue = (value) => {
    if(typeof value === 'number'){ return String(value); }
    if(typeof value === 'boolean'){ return value ? 'true' : 'false'; }
    return '"' + vistaEscape(value == null ? '' : String(value)) + '"';
  };

  const vistaAttrsFromProps = (propsObj, skip) => {
    const out = [];
    const skipMap = new Set(skip || []);
    Object.keys(propsObj || {}).forEach((k) => {
      if(skipMap.has(k)){ return; }
      out.push(' .' + String(k) + ':' + vistaAttrValue(propsObj[k]));
    });
    return out.join('');
  };

  const vistaFromItem = (item, indent) => {
    const pad = ' '.repeat(indent);
    const type = item && item.type ? item.type : 'text';
    const propsObj = parsePropsObject(item && item.props ? item.props : '');
    const attrs = vistaAttrsFromProps(propsObj, ['label', 'placeholder', 'draw', 'code']);
    if(type === 'row'){
      const kids = Array.isArray(item.children) ? item.children : [];
      const inner = kids.map(ch => vistaFromItem(ch, indent + 4)).join('\n');
      return pad + "row" + attrs + " [\n" + inner + "\n" + pad + "]";
    }
    if(type === 'box'){
      const kids = Array.isArray(item.children) ? item.children : [];
      const inner = kids.map(ch => vistaFromItem(ch, indent + 4)).join('\n');
      return pad + "box" + attrs + " [\n" + inner + "\n" + pad + "]";
    }
    if(type === 'col'){
      const kids = Array.isArray(item.children) ? item.children : [];
      const inner = kids.map(ch => vistaFromItem(ch, indent + 4)).join('\n');
      return pad + "col" + attrs + " [\n" + inner + "\n" + pad + "]";
    }
    if(type === 'canvas'){
      const draw = propsObj.draw ? String(propsObj.draw) : '';
      if(draw){
        return pad + "canvas" + attrs + " [\n" + draw + "\n" + pad + "]";
      }
      return pad + "canvas" + attrs;
    }
    if(type === 'image'){
      const src = propsObj.label || item.props || '';
      return pad + 'image "' + vistaEscape(src) + '"' + attrs;
    }
    if(type === 'divider'){
      return pad + "divider" + attrs;
    }
    if(type === 'raw_vista'){
      const code = propsObj.code || item.props || '';
      return pad + String(code || '');
    }
    if(type === 'title'){
      const text = propsObj.label || item.props || '';
      return pad + 'title "' + vistaEscape(text) + '"' + attrs;
    }
    if(type === 'text'){
      const text = propsObj.label || item.props || '';
      return pad + 'text "' + vistaEscape(text) + '"' + attrs;
    }
    if(type === 'button'){
      const label = propsObj.label || item.props || 'Button';
      return pad + 'button "' + vistaEscape(label) + '"' + attrs;
    }
    if(type === 'input'){
      const placeholder = propsObj.placeholder || item.props || '';
      return pad + 'input .placeholder:"' + vistaEscape(placeholder) + '"' + attrs + ' name';
    }
    return pad + 'text "' + vistaEscape(type) + '"';
  };

