import "vista.art"!

ARTURO [
    Title: "Tabs Update"
    Logo: "arturo-vista.png"
    Width: 900
    Height: 560
]

webview_sync_updates: true

view .file: "ui.html" [
    tabs [
        tab "A" [text "Alpha"]
        tab "B" [text "Beta"]
