import "vista.art"!

ARTURO [
    Title: "Live Update"
    Logo: "arturo-vista.png"
    Width: 900
    Height: 560
]

webview_sync_updates: true
webview_sync_state_updates: true

html: view .file: "ui.html" [
    text "Hello"
]

ids: keys vista_state\last_faces
firstId: get ids 0

update_face firstId #[text: "Updated from Arturo"]

set_state "greeting" "Hello from state"

print html
