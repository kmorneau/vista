import "vista.art"!

ARTURO [
    Title: "Digital Clock"
    Logo: "arturo-vista.png"
    Width: 320
    Height: 160
]

clock_text: "--:--:--"

refresh_clock: function [] [
    clock_text: to :string now
]

refresh_clock

view .file:"digital-clock.html" [
    box .pad:12 [
        title "Digital Clock"
        text clock_text
        button "Refresh" [refresh_clock]
    ]
]
