import "vista.art"!

ARTURO [
    Title: "Radio Slider"
    Logo: "arturo-vista.png"
    Width: 900
    Height: 560
]

level: 5
choice: "Green"

view [
    title "Sliders + Radios"
    slider level .min: 0 .max: 10 .labels:["0" "10"]
    radio choice ["Red" "Green" "Blue"]
    return
    row [
        text "Level:"
        text level
    ]
    row [
        text "Choice:"
        text choice
    ]
]
