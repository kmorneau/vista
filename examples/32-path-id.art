import "vista.art"!

ARTURO [
    Title: "Path Id"
    Logo: "arturo-vista.png"
    Width: 900
    Height: 560
]

view [
    title "Path .id Helper"
    text .id:"greeting" "Hello"
    text "Close window to see lookup result in terminal."
]

face: get_face_path [".id:greeting"]
switch equal? face null [
    print "Lookup failed: .id:greeting not found"
][
    print "Lookup succeeded:"
    print "id: " ++ face\id
    if key? face "text" [
        print "text: " ++ to :string face\text
    ]
]
