; Vista UI - Validation Enhancement Smoke Tests

run_example: function [file] [
    res: execute.code ("VISTA_NO_WEBVIEW=1 arturo " ++ file)
    if not? equal? res\code 0 [
        print ["FAIL" file "exit code" to :string res\code]
        return false
    ]
    print ["PASS" file]
    true
]

test_validation_demo: function [] [
    print "Test: validation demo runs"
    run_example "examples/62-validation-demo.art"
]

test_all_features_form: function [] [
    print "Test: all-features form runs"
    run_example "examples/66-all-features-demo.art"
]

run_validation_tests: function [] [
    print "=== Validation Tests ==="
    passed: 0
    failed: 0

    if test_validation_demo [passed: passed + 1] [failed: failed + 1]
    if test_all_features_form [passed: passed + 1] [failed: failed + 1]

    print ""
    print ["Results:" passed "passed," failed "failed"]
    passed
]
