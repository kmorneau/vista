; Vista UI - Theme Enhancement Smoke Tests

run_example: function [file] [
    res: execute.code ("VISTA_NO_WEBVIEW=1 arturo " ++ file)
    if not? equal? res\code 0 [
        print ["FAIL" file "exit code" to :string res\code]
        return false
    ]
    print ["PASS" file]
    true
]

test_theme_demo: function [] [
    print "Test: theming demo runs"
    run_example "examples/61-theming-demo.art"
]

test_all_features_theme: function [] [
    print "Test: all-features theme controls run"
    run_example "examples/66-all-features-demo.art"
]

run_theme_tests: function [] [
    print "=== Theming Tests ==="
    passed: 0
    failed: 0

    if test_theme_demo [passed: passed + 1] [failed: failed + 1]
    if test_all_features_theme [passed: passed + 1] [failed: failed + 1]

    print ""
    print ["Results:" passed "passed," failed "failed"]
    passed
]
