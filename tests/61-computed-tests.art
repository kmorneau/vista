; Vista UI - Computed Enhancement Smoke Tests

run_example: function [file] [
    res: execute.code ("VISTA_NO_WEBVIEW=1 arturo " ++ file)
    if not? equal? res\code 0 [
        print ["FAIL" file "exit code" to :string res\code]
        return false
    ]
    print ["PASS" file]
    true
]

test_computed_demo: function [] [
    print "Test: computed demo runs"
    run_example "examples/63-computed-state-demo.art"
]

test_all_features_state: function [] [
    print "Test: all-features state section runs"
    run_example "examples/66-all-features-demo.art"
]

run_computed_tests: function [] [
    print "=== Computed State Tests ==="
    passed: 0
    failed: 0

    if test_computed_demo [passed: passed + 1] [failed: failed + 1]
    if test_all_features_state [passed: passed + 1] [failed: failed + 1]

    print ""
    print ["Results:" passed "passed," failed "failed"]
    passed
]
