; Vista UI - Animation Enhancement Smoke Tests

run_example: function [file] [
    res: execute.code ("VISTA_NO_WEBVIEW=1 arturo " ++ file)
    if not? equal? res\code 0 [
        print ["FAIL" file "exit code" to :string res\code]
        return false
    ]
    print ["PASS" file]
    true
]

test_animation_demo: function [] [
    print "Test: animation demo runs"
    run_example "examples/60-animation-demo.art"
]

test_styled_app_demo: function [] [
    print "Test: styled app demo runs"
    run_example "examples/60-styled-app.art"
]

run_animation_tests: function [] [
    print "=== Animation Tests ==="
    passed: 0
    failed: 0

    if test_animation_demo [passed: passed + 1] [failed: failed + 1]
    if test_styled_app_demo [passed: passed + 1] [failed: failed + 1]

    print ""
    print ["Results:" passed "passed," failed "failed"]
    passed
]
