import "vista.art"!

ARTURO [
    Title: "Feature Coverage Smoke"
    Width: 1100
    Height: 900
]

; Bindings used by action command compilation
api_base: "http://localhost:18969"
provider: "openai"
model: "gpt-4o-mini"
temperature: "0.2"
top_p: "0.9"
max_tokens: "128"
message: "hello"
chat_log: ""
status: "Ready"
email: ""
password: ""
mfa_code: ""
mfa_challenge: ""
auth_token: ""
profile_label: "Signed out"
new_email: ""
old_password: ""
new_password: ""
ui_message: "clipboard message"
ui_title: "dialog title"

items: ["One" "Two" "Three"]
sel: "One"
flag: true
slider_value: 40
text_value: "sample"
list_pick: "One"

view .returnHtml [
    title "Coverage"
    subtitle "Vista + Vista-graphics feature smoke"
    text "text"
    label "label"
    info "readonly"
    field text_value
    input text_value
    area text_value
    textarea text_value
    choice sel items
    select sel items
    drop-list sel items
    radio sel items
    radio-group sel items
    check flag
    checkbox flag
    toggle flag
    slider slider_value
    rotary slider_value
    key "Key Capture" text_value
    progress slider_value
    image "arturo-vista.png"
    icon "arturo-vista.png"
    anim "arturo-vista.png"
    audio .src:""
    video .src:""
    divider
    list list_pick items
    text-list items
    panel "Panel" [
        row [
            box [text "box"]
            group [text "group"]
            col [text "col-a" text "col-b"]
        ]
        grid .cols:2 [
            text "g1"
            text "g2"
        ]
    ]
    tabs [
        tab "A" [text "Tab A"]
        tab "B" [text "Tab B"]
    ]
    split .ratio:50 [
        text "Left"
    ] [
        text "Right"
    ]
    sensor [text "sensor"]

    toolbar [
        tool-group [
            button "AI Chat" [ai_chat]
            button "AI Load" [ai_settings_load]
            button "AI Save" [ai_settings_save]
        ]
    ]
    menubar [
        tool-group [
            button "Alert" [alert]
            button "Dialog" [dialog]
            button "Clip" [clip]
            button "Unclip" [unclip]
        ]
    ]

    button "Auth Login" [auth_login]
    button "Auth Signup" [auth_signup]
    button "Auth MFA Verify" [auth_mfa_verify]
    button "Auth Update Email" [auth_update_email]
    button "Auth Update Password" [auth_update_password]
    button "Auth Enable MFA" [auth_enable_mfa]
    button "Auth Disable MFA" [auth_disable_mfa]
    button "Auth Logout" [auth_logout]

    table [
        table-head [
            table-row [
                table-header "h1"
                table-header "h2"
            ]
        ]
        table-body [
            table-row [
                table-cell "c1"
                table-cell "c2"
            ]
        ]
        table-foot [
            table-row [
                table-cell "f1"
                table-cell "f2"
            ]
        ]
    ]

    canvas .id:"gfx-cover" .width:340 .height:170 [
        pen "#111"
        fill-pen "#ddeeff"
        line-width 2
        line-cap "round"
        line-join "round"
        line-pattern [4 2]
        push
        translate 4 4
        rotate 5
        scale 1 1
        skew 0 0
        smooth true
        coord-system "cartesian"
        text-align "left"
        text-baseline "alphabetic"
        font "14px sans-serif"
        line [10 10] [140 10]
        box [10 20] [80 60]
        circle [120 40] 20
        arc [170 40] 20 [0 180]
        ellipse [220 40] [24 14]
        polygon [[10 80] [40 120] [70 80]]
        curve [[90 110] [110 80] [140 120] [170 90]]
        flood "#eef"
        linear-gradient [0 0] [200 0] [[0 "#fff"] [1 "#00f"]]
        radial-gradient [220 90] 10 [220 90] 40 [[0 "#fff"] [1 "#f00"]]
        grad-pen "g1"
        matrix [1 0 0 1 0 0]
        invert-matrix
        reset-matrix
        transform [1 0 0 1 0 0]
        arrow [200 110] [260 130]
        shape "M10 10 L20 20 Z"
        triangle [260 20] [300 60] [220 60]
        spline [[180 120] [210 90] [240 120] [270 100]]
        clip [0 0] [300 150]
        fill-rule "nonzero"
        gamma 1.0
        anti-alias true
        pop
        text [8 150] "graphics"
        image "arturo-vista.png" [280 8] [40 40]
    ]
]
